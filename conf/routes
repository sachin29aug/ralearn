# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET    /explore                     controllers.HomeController.explore
GET    /books/:categoryId           controllers.HomeController.books(categoryId: Long)
GET    /book/temp/:id               controllers.HomeController.bookTemp(id: Long)
GET    /home/:categoryId            controllers.My.home(categoryId: Long)

# Signup
GET     /signup                     controllers.Signup.categories()
+ nocsrf
POST    /signup/login               controllers.Signup.signupLoginPost(request: Request)
GET     /login                      controllers.Login.login(returnUrl: String ?= null)
+ nocsrf
POST    /login                      controllers.Login.loginPost(request: Request)

# My
GET     /home                       controllers.My.home1(request: Request)
+ nocsrf
POST    /shuffle/:userBookId        controllers.My.shufflePost(request: Request, userBookId: Long)
+ nocsrf
POST    /favorite/:bookId           controllers.My.favoritePost(request: Request, bookId: Long)
GET     /list/:listName             controllers.My.list(request: Request, listName: String)
GET     /feedback                   controllers.My.feedback()
+ nocsrf
POST    /feedback                   controllers.My.feedbackPost(request: Request)
GET     /discover                   controllers.My.discover()

# Book
+ nocsrf
GET    /book/:id                    controllers.BookController.book(request: Request, id: Long)

# Admin
GET     /import/books               controllers.SystemAdmin.importBooks

# Secret Admin
GET     /test/9uy5y                  controllers.SecretAdmin.test
GET     /setup/categories/j8r3h      controllers.SecretAdmin.setupCategories

# ContentAdmin
GET     /8utfd4/admin/content/blink/categories        controllers.ContentAdmin.scrapBlinkCategories()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
